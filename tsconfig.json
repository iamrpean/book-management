{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "outDir": "dist",
    "rootDir": "src",
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}